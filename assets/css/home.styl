@import "./utils"

#frontpage
  .hero-unit
    line-height: 1.3em
  .app-icon-list
    margin: 0
    text-align: center
    li
      cursor: pointer
      list-style-type: none
      green-glow()
      box-sizing: border-box
      width: 100%
      max-width: 220px
      min-height: 220px
      display: inline-block
      vertical-align: middle
      .name
        display: block

  .events-and-docs
    margin-left: 0
    li
      list-style-type: none
      green-glow()

.alert.invitation
  color: #333
  td.invitor
    white-space: nowrap
    border: 1px solid #eee
    padding-right: 0.5em
  td.invitation
    padding-left: 0.5em

.more-page
  .more-things
    text-align: center
    li
      list-style-type: none
      width: 300px
      height: 300px
      display: inline-block
      vertical-align: middle
      text-align: left
      green-glow()

.tile-link
  cursor: pointer

.join-inline-user
  border: 1px solid #ddd
  padding: 0.5em
  display: inline-block
  margin: 0.5em
